{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules"]
}
